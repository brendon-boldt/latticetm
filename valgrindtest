#!/bin/bash

DATA_DIR="$HOME/research/phoneme_lattices/clean"

libtool --mode=execute valgrind ./src/latticelm/latticelm \
		--train_file "$DATA_DIR/en.contains-buy.lat.clean" \
		--trans_file "$DATA_DIR/en.contains-buy.txt" \
		--train_len 96 --test_len 96 \
		--file_format openfst --model_type lextm \
		--epochs 2 --lattice_weight 1.0 --concentration 1.0
